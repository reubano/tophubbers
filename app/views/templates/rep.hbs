{{#if_logged_in}}
	<div class="view container-fluid" id="{{id}}">
		<h2>{{first_name}} {{last_name}} ({{id}})</h2>

		<div id="work-graph" class="container-fluid">
			<h3>Work Graph<br></h3>
			<ul class="nav nav-tabs" id="work_tab">
				<li class="active"><a href="#cur_work_chart" data-toggle="tab">This Month</a></li>
				<li><a href="#prev_work_chart" data-toggle="tab">Last Month</a></li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane active" id="cur_work_chart">
					<div class="chart"><svg></svg></div>
				</div>
				<div class="tab-pane" id="prev_work_chart">
					<div class="chart"><svg></svg></div>
				</div>
			</div>
			<script>$(function() {$('#work_tab a:first').tab('show');})</script>
			<hr>
		</div>
		<div id="feedback" class="container-fluid">
			<h3>Customer Feedback & Progress<br></h3>
			<ul class="nav nav-tabs" id="feedback_tab">
				<li class="active"><a href="#cur_feedback" data-toggle="tab">This Month</a></li>
				<li><a href="#prev_feedback" data-toggle="tab">Last Month</a></li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane active" id="cur_feedback">
					<div class="btn-group">
						<table class="table"><caption>Feedback Summary</caption></table>
						{{#with cur_feedback_data}}
						<a class="btn btn-large btn-warning disabled">Cat 1
							{{#times x_survey_cat_1}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes x_survey_cat_1}}<i class="icon-star"></i>{{/untimes}}
						</a>
						<a class="btn btn-large btn-warning disabled">Cat 2
							{{#times x_survey_cat_2}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes x_survey_cat_2}}<i class="icon-star"></i>{{/untimes}}
						</a>
						<a class="btn btn-large btn-warning disabled">Cat 3
							{{#times x_survey_cat_3}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes x_survey_cat_3}}<i class="icon-star"></i>{{/untimes}}
						</a>
						<a class="btn btn-large btn-warning disabled">Cat 4
							{{#times x_survey_cat_4}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes x_survey_cat_4}}<i class="icon-star"></i>{{/untimes}}
						</a>
						{{/with}}
						<table class="table table-striped">
							<caption>Progress Table</caption>
							<thead><tr>
								<th>Sales (TZS)</th>
								<th>Visits (#)</th>
								<th>Commission (TZS)</th>
								<th>Points (#)</th>
							</tr></thead>
							<tbody><tr>
							{{#with cur_progress}}
								<td>{{sales}}</td><td>{{visits}}</td>
								<td>{{commission}}</td><td>{{pts}}</td>
							{{/with}}
							</tr></tbody>
						</table>
						<table class="table"><caption>Progress Graph</caption></table>
						<div class="progress">
						{{#with cur_progress}}
							<div class="bar" style="width: {{pre}}%;"></div>
							<div class="bar bar-muted" style="width: {{to_date}}%;"></div>
							<div class="bar" style="width: {{post}}%;"></div>
							<div class="bar bar-transparent" style="width: {{gap}}%;"></div>
							<div class="bar bar-success" style="width: {{end}}%;"></div>
						{{/with}}
						</div>
					</div>
				</div>
				<div class="tab-pane" id="prev_feedback">
					<div class="btn-group">
						<table class="table"><caption>Feedback Summary</caption></table>
						{{#with prev_feedback_data}}
						<a class="btn btn-large btn-warning disabled"> Cat 1
							{{#times month_cat_1}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes month_cat_1}}<i class="icon-star"></i>{{/untimes}}
						</a>
						<a class="btn btn-large btn-warning disabled">Cat 2
							{{#times month_cat_2}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes month_cat_2}}<i class="icon-star"></i>{{/untimes}}
						</a>
						<a class="btn btn-large btn-warning disabled">Cat 3
							{{#times month_cat_3}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes month_cat_3}}<i class="icon-star"></i>{{/untimes}}
						</a>
						<a class="btn btn-large btn-warning disabled">Cat 4
							{{#times month_cat_4}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes month_cat_4}}<i class="icon-star"></i>{{/untimes}}
						</a>
						{{/with}}
						<table class="table table-striped">
							<caption>Progress Table</caption>
							<thead><tr>
								<th>Sales (TZS)</th>
								<th>Visits (#)</th>
								<th>Commission (TZS)</th>
								<th>Points (#)</th>
							</tr></thead>
							<tbody><tr>
							{{#with prev_progress}}
								<td>{{sales}}</td><td>{{visits}}</td>
								<td>{{commission}}</td><td>{{pts}}</td>
							{{/with}}
							</tr></tbody>
						</table>
						<table class="table"><caption>Progress Graph</caption></table>
						<div class="progress">
						{{#with prev_progress}}
							<div class="bar" style="width: {{pre}}%;"></div>
							<div class="bar bar-muted" style="width: {{to_date}}%;"></div>
							<div class="bar" style="width: {{post}}%;"></div>
							<div class="bar bar-transparent" style="width: {{gap}}%;"></div>
							<div class="bar bar-success" style="width: {{end}}%;"></div>
						{{/with}}
						</div>
					</div>
				</div>
			</div>
			<script>$(function() {$('#feedback_tab a:first').tab('show');})</script>
			<hr>
		</div>
		<ul class="inline">
			<li>Name: {{first_name}} {{last_name}}</li>
			<li>Phone #: {{airtel}}</li>
			<li>ID #: {{id}}</li>
			<li>Ward: {{ward}}</li>
		</ul>
	</div>
	<span id="draw-chart-cur"></span>
	<span id="draw-chart-prev"></span>
{{else}}
	<h2 class="text-error">You must log in to see this page.</h2>
{{/if_logged_in}}

