<div class="control-group">
	<div class="controls">
		<a class="btn" href="/rep/{{login}}/false/true">
			<i class="icon-refresh"></i> Refresh Data
		</a>
		<a class="btn" href="/rep/{{login}}/true">
			<i class="icon-refresh"></i> Redraw Graph
		</a>
	</div>
</div>
<div class="view" id="{{login}}">
	<h2>{{name}}</h2>
	<div id="work-graph">
		<h3>Activity Graph<br></h3>
		<div class="chart"><svg id="svg"></svg></div>
		<hr>
	</div>
	<div id="feedback">
		<h3>Scores & Progress<br></h3>
		<div class="tab-pane active" id="cur_feedback">
			<ul class="unstyled">
				<li>
					<div class="row-fluid">
						<div class="span2">
							<label>Score Summary</label>
						</div>
						<div class="span10">
							<div>
								<table class="table table-striped">
									<thead><tr>
										<th>Score 1</th><th>Score 2</th>
										<th>Score 3</th><th>Score 4</th>
									</tr></thead>
									<tbody><tr>
										<td><a class="btn btn-large btn-warning disabled">
										{{#times score}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes score}}<i class="icon-star"></i>{{/untimes}}</a></td>
										<td><a class="btn btn-large btn-warning disabled">
										{{#times score}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes score}}<i class="icon-star"></i>{{/untimes}}</a></td>
										<td><a class="btn btn-large btn-warning disabled">
										{{#times score}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes score}}<i class="icon-star"></i>{{/untimes}}</a></td>
										<td><a class="btn btn-large btn-warning disabled">
										{{#times score}}<i class="icon-star icon-white"></i>{{/times}}{{#untimes score}}<i class="icon-star"></i>{{/untimes}}</a></td>
									</tr></tbody>
								</table>
							</div>
						</div>
					</div>
				</li>
				<li>
					<div class="row-fluid">
						<div class="span2">
							<label>Stats Summary</label>
						</div>
						<div class="span10">
							<table class="table table-striped">
								<thead><tr>
									<th>Repos</th>
									<th>Gists</th>
									<th>Followers</th>
									<th>Following</th>
								</tr></thead>
								<tbody><tr>
									<td>{{public_repos}}</td>
									<td>{{public_gists}}</td>
									<td>{{followers}}</td>
									<td>{{following}}</td>
								</tr></tbody>
							</table>
						</div>
					</div>
				</li>
				<li>
					<div class="row-fluid">
						<div class="span2">
							<label>Followers Progress</label>
						</div>
						<div class="progress span10">
							<div class="bar" style="width: {{pre}}%;"></div>
							<div class="bar bar-muted" style="width: {{to_date}}%;"></div>
							<div class="bar" style="width: {{post}}%;"></div>
							<div class="bar bar-transparent" style="width: {{gap}}%;"></div>
							<div class="bar bar-success" style="width: {{end}}%;"></div>
						</div>
					</div>
				</li>
			</ul>
		</div>
		<hr>
	</div>
	<div id="rep-info">
		<ul class="inline">
			<li>Name: {{name}}</li>
			<li>Email: {{email}}</li>
			<li>Login: {{login}}</li>
			<li>Location: {{location}}</li>
		</ul>
	</div>
</div>
